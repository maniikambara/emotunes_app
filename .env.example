# API Configuration
# Base URL for the backend API
API_BASE_URL=http://localhost:8000
API_VERSION=v1

# Camera Configuration
# Options for CAMERA_RESOLUTION: low, medium, high, veryHigh, ultraHigh, max
CAMERA_RESOLUTION=medium
CAMERA_ENABLE_AUDIO=false

# Model Configuration
# Confidence threshold for emotion detection (0.0 to 1.0)
MODEL_CONFIDENCE_THRESHOLD=0.7
# Input size for the TFLite model (must match model requirements)
MODEL_INPUT_SIZE=224

# Debug Configuration
# Enable detailed logging for debugging
ENABLE_DEBUG_LOGGING=true

# Spotify Configuration
# Get these values from your Spotify Developer Dashboard
# https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_client_id_here
SPOTIFY_CLIENT_SECRET=your_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8000/callback

# Note: Copy this file to .env and replace the placeholder values with your actual configuration